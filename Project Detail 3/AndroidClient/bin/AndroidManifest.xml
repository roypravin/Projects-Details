<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mvs.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="mvs.android.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mvs.android.RecognizeActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="mvs.android.MainMeuActivity" >
        </activity>
        <activity
            android:name="mvs.android.ImageSearchActivity"
            android:label="@string/title_activity_image_search" >
        </activity>
        <activity
            android:name="mvs.android.VoiceSearchActivity"
            android:label="@string/title_activity_voice_search" >
        </activity>
        <activity
            android:name="mvs.android.TextSearchActivity"
            android:label="@string/title_activity_text_search" >
        </activity>
    </application>

</manifest>